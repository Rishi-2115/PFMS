<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post">

    <Button
        android:id="@+id/b2"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/b5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="-59dp"
        android:background="@mipmap/nsc" />

    <TextView
        android:id="@+id/rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kvp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="1dp"
        android:text="Recurring Deposit" />

    <TextView
        android:id="@+id/nsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b5"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/kvp"
        android:text="National Savings Certificates" />

    <Button
        android:id="@+id/b3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/b5"
        android:layout_alignBottom="@+id/b4"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="21dp"
        android:background="@mipmap/kvp" />

    <TextView
        android:id="@+id/kvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="-1dp"
        android:text="Kisan Vikas Patra" />

    <Button
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="182dp"
        android:background="@mipmap/recurring_deposit" />

    <Button
        android:id="@+id/b5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="77dp"
        android:background="@mipmap/tdep" />

    <TextView
        android:id="@+id/td"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b5"
        android:layout_alignStart="@+id/b5"
        android:text="Time Deposit" />




</RelativeLayout>